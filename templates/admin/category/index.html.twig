{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Gestion des catégories</h1>

    <a class="btn btn-outline-primary mb-3" href="{{ path('app_admin_category_edit') }}">
        Nouvelle catégorie
    </a>
    
    <table class="table">
        <tr class="table-dark">
            <th>ID</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a class="btn btn-outline-primary" href={{ path('app_admin_category_edit', {'id': category.id}) }}>
                        Modifier
                    </a>
                    <a class="btn btn-outline-danger" href="{{ path('admin_category_delete', {'id': category.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}